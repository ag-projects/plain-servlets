<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>Ricky's Restaurant</display-name>
    <description>
        The menu and online ordering system for Ricky's Restaurant
    </description>

    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.agharibi.servlets.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>com.agharibi.servlets.MenuServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MenuSearchServlet</servlet-name>
        <servlet-class>com.agharibi.servlets.MenuSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.agharibi.servlets.OrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OrderReceivedServlet</servlet-name>
        <servlet-class>com.agharibi.servlets.OrderReceivedServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ThankYouServlet</servlet-name>
        <servlet-class>com.agharibi.servlets.ThankYouServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ThankYouServlet</servlet-name>
        <url-pattern>/thankYou.html</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>OrderReceivedServlet</servlet-name>
        <url-pattern>/orderReceived.html</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/order.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MenuSearchServlet</servlet-name>
        <url-pattern>/searchResults.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/hello.html</url-pattern>
    </servlet-mapping>

    <!--session time out-->
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>
    
    <!--security configuration-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>order pages</web-resource-name>
            <url-pattern>/order.html</url-pattern>

            <url-pattern>/thankYou.html</url-pattern>
        </web-resource-collection>

        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>staff pages</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app> 
